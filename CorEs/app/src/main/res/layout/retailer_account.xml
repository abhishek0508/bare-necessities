<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetailerAccount">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="412dp"
        android:layout_height="99dp"
        android:background="#837C49"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="614dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

           <ImageButton
                android:id="@+id/imageRetailerAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="159dp"
                tools:src="@tools:sample/avatars" />

            <!--
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="159dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="287dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="186dp" />

            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="683dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageRetailerAcc"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="288dp">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:hint="@string/retailerName"
                    android:inputType="textPersonName"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    tools:layout_editor_absoluteX="53dp"
                    tools:layout_editor_absoluteY="310dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:hint="@string/shopName"
                    android:inputType="textPersonName"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    tools:layout_editor_absoluteX="53dp"
                    tools:layout_editor_absoluteY="396dp" />

                <EditText
                    android:id="@+id/emailRetailerAcc"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:hint="@string/email_1"
                    android:inputType="textEmailAddress"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    tools:layout_editor_absoluteX="53dp"
                    tools:layout_editor_absoluteY="310dp" />

                <EditText
                    android:id="@+id/passwordRetailerAcc"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:hint="@string/passwordCreate"
                    android:inputType="textPassword"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    tools:layout_editor_absoluteX="53dp"
                    tools:layout_editor_absoluteY="310dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:hint="@string/phoneNum"
                    android:inputType="phone"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="476dp" />

                <EditText
                    android:id="@+id/editTextGSTNum"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_margin="15dp"
                    android:ems="10"
                    android:hint="@string/GSTnum"
                    android:inputType="phone"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="476dp" />

                <TextView
                    android:id="@+id/textViewShopType"
                    android:layout_width="206dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/shopType"
                    android:textColor="#5F5235"
                    android:textColorHint="#CC5F5235"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="21dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    tools:layout_editor_absoluteX="111dp"
                    tools:layout_editor_absoluteY="102dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="206dp"
                android:layout_height="37dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/locationView"
                android:textColor="#5F5235"
                android:textColorHint="#CC5F5235"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/mapView"
                tools:layout_editor_absoluteX="21dp" />


            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="659dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/saveButtonRA"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#EFEE89"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/saveButton"
                    android:textColor="#5F5235"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>